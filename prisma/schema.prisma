generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(DRIVER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  trips              Trip[]
  maintenanceTickets MaintenanceTicket[]

  @@map("users")
}

model Vehicle {
  id           String        @id @default(cuid())
  plateNumber  String        @unique
  model        String
  year         Int
  status       VehicleStatus @default(AVAILABLE)
  lastLat      Float?
  lastLng      Float?
  lastUpdate   DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relations
  trips              Trip[]
  telemetry          Telemetry[]
  alerts             Alert[]
  maintenanceTickets MaintenanceTicket[]

  @@map("vehicles")
}

model Trip {
  id          String     @id @default(cuid())
  startPoint  String
  endPoint    String
  status      TripStatus @default(PLANNED)
  startTime   DateTime?
  endTime     DateTime?
  distance    Float?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Foreign keys
  driverId  String
  vehicleId String

  // Relations
  driver         User               @relation(fields: [driverId], references: [id])
  vehicle        Vehicle            @relation(fields: [vehicleId], references: [id])
  checklistItems TripChecklistItem[]

  @@map("trips")
}

model ChecklistItemTemplate {
  id          String @id @default(cuid())
  name        String
  description String
  required    Boolean @default(true)
  order       Int

  // Relations
  tripChecklistItems TripChecklistItem[]

  @@map("checklist_item_templates")
}

model TripChecklistItem {
  id        String   @id @default(cuid())
  checked   Boolean  @default(false)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  tripId     String
  templateId String

  // Relations
  trip     Trip                   @relation(fields: [tripId], references: [id])
  template ChecklistItemTemplate @relation(fields: [templateId], references: [id])

  @@unique([tripId, templateId])
  @@map("trip_checklist_items")
}

model Telemetry {
  id        String   @id @default(cuid())
  lat       Float
  lng       Float
  speed     Float?
  fuel      Float?
  timestamp DateTime @default(now())

  // Foreign keys
  vehicleId String

  // Relations
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])

  @@map("telemetry")
}

model Alert {
  id          String      @id @default(cuid())
  type        AlertType
  message     String
  severity    AlertLevel  @default(LOW)
  resolved    Boolean     @default(false)
  resolvedAt  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Foreign keys
  vehicleId String

  // Relations
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])

  @@unique([vehicleId, type], name: "vehicleId_type")
  @@map("alerts")
}

model MaintenanceTicket {
  id          String            @id @default(cuid())
  title       String
  description String
  status      MaintenanceStatus @default(PENDING)
  priority    Priority          @default(MEDIUM)
  scheduledAt DateTime?
  completedAt DateTime?
  cost        Float?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Foreign keys
  vehicleId   String
  assignedToId String?

  // Relations
  vehicle    Vehicle @relation(fields: [vehicleId], references: [id])
  assignedTo User?   @relation(fields: [assignedToId], references: [id])

  @@map("maintenance_tickets")
}

enum UserRole {
  DRIVER
  MANAGER
}

enum VehicleStatus {
  AVAILABLE
  IN_USE
  MAINTENANCE
  OUT_OF_SERVICE
}

enum TripStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum AlertType {
  MAINTENANCE
  FUEL_LOW
  SPEED_LIMIT
  GEOFENCE
  ENGINE_WARNING
  TIRE_PRESSURE
}

enum AlertLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum MaintenanceStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
